<div id="post-index">
  <% if @posts.exists? %>
    <% @posts.each_slice(2) do |post| %>
       <div class="row">
       	<%post.each do |post| %>
         <div class="col-md-6">
        	<div class="post">
        		<%= image_tag post.image.url, width:'100%'%>
        		<div class="post-content">
        			<h3><%= post.title%></h3>
        			<small>Posted By <%= post.user.name %>  on <%= post.created_at.to_time.strftime('%B %e at %l:%M %p')%></small>
        			<%= raw post.body.truncate(140)%>
        			<%= link_to 'Read More', post_path(post), class:'btn btn-primary' %>
        	      </div>
               </div>
            </div>
         <%end%>
       </div>
     <%end%>
     <%else%>
     <p> No Post  yet</p>
    <%end%>
 </div>
    