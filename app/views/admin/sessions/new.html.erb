<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title"></h1>
            <div class="account-wall">
                <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                    alt="">
                <%= form_tag admin_sessions_path, class:'form-signin' do %>
                <% if flash[:notice] %>
                  <div class="alert alert-success">
                      <%= flash[:notice] %>
                  </div>
                 <% end %>
                 <% if flash[:alert] %>
                  <div class="alert alert-danger">
                      <%= flash[:alert] %>
                  </div>
                 <% end %>
                 <%= text_field_tag :email, params[:email], class:'form-control', placeholder:'Email Address' %>
                 <%= password_field_tag :password, '', class:'form-control', placeholder: 'Password' %> 
                 <%= submit_tag "Login", class:'btn btn-primary btn-block btn-lg' %>
                 <% end %>
            </div>           
        </div>
    </div>
</div>